---
interface Props {
	src: string;
	caption: string;
}
const {src, caption} = Astro.props;
---

<div class="image">
	<img src={src}>
	{caption &&
		<br>
		<label>{caption}</label>
	}
</div>
<style>
	.image {
		margin: 0 auto;
		text-align: center;
		img {
			max-width: 80%;
		}
		label {
			font-style: italic;
		}
	}
</style>
