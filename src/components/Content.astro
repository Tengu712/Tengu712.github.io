<div class="content">
	<slot />
</div>
<style>
	.content {
		display: flex;
		flex-flow: column;
		flex-grow: 1;
		box-sizing: border-box;
		/* 600px:0.75 800px:3 */
		padding: clamp(0.75rem, -6rem + 18vw, 3rem);
		width: 100%;
		height: 100%;
		word-wrap : break-word;
		overflow-wrap : break-word;
		a {
			color: black;
		}
		a:hover {
			color: red;
		}
		b {
			color: red;
		}
		h2 {
			margin-top: 5rem;
			padding: 0.25rem 0.8rem;
			background: transparent;
			border-left: solid 0.5rem black;
			/* 600px:1.25 800px:1.5 */
			font-size: clamp(1.25rem, 0.5rem + 2vw, 1.5rem);
		}
		h3 {
			margin-top: 2rem;
		}
		.astro-code {
			border-radius: 5px;
			padding: 1.5rem;
			code {
				font-family:
					'Noto Sans Mono CJK JP',
					'Source Han Code JP',
					SFMono-Regular,
					Consolas,
					'Roboto Mono',
					'Courier New',
					Meiryo,
					monospace;
			}
		}
		.sc {
			overflow: scroll;
		}
		blockquote {
			position: relative;
			color: #303030;
			background-color: #fff3f3;
			border-left: solid 0.35rem #b07a7a;
			padding: 1rem;
			margin-left: 2rem;
			/* 600px:0.5 800px:2.5 */
			margin-right: clamp(0.5rem, -5.5rem + 16vw, 2.5rem);
			cite {
				display: block;
				color: #808080;
				font-size: 0.8rem;
				text-align: right;
				padding-right: 1rem;
			}
		}
		table {
			margin: 0 auto;
			border-collapse: collapse;
			thead tr {
				border-top: 1px solid black;
				border-bottom: 1px solid black;
			}
			tbody tr:last-child {
				border-bottom: 1px solid black;
			}
			td,
			th {
				border: 1px solid black;
				border-top: none;
				border-bottom: none;
				padding: 0 0.5rem;
			}
			td:first-child,
			th:first-child {
				border-left: none;
			}
			td:last-child,
			th:last-child {
				border-right: none;
			}
		}
	}
</style>
