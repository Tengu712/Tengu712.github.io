---
import Layout from "./Layout.astro";
import PostHeader from "../components/PostHeader.astro";
import PostFooter from "../components/PostFooter.astro";

const { frontmatter } = Astro.props;

function getId(pathname: string): string {
	return pathname.split("/").slice(-2)[0];
}
---

<Layout title={frontmatter.title}>
	<PostHeader title={frontmatter.title} genre={frontmatter.genre} tags={frontmatter.tags} date={frontmatter.date} />
	<slot />
	<PostFooter id={getId(Astro.url.pathname)} />
</Layout>
